/**
 * 
 */

var map;
var diagramMap;
var diagramFormat;
var iconMap;

var modalElements;
var introductionElements;
var overloadingElements;

let introductionModal;
let overloadingModal;
let overridingModal;
let coercionModal;
	
let introduction;
let introductionTab;
let introductionButton;

let overloading;
let overloadingTab;
let overloadingButton;

let overriding;
let overridingTab;
let overridingButton;

let coercion;
let coercionTab;
let coercionButton;

$(document).ready(function(){


	initialize();
	let introductionElementsID = "#introduction, #introductionTab, #introduction-button";
	let overloadingElementsID = "#overloading, #overloadingTab, #overloading-button";
	let overridingElementsID = "#overriding, #overridingTab, #overriding-button";
	let coercionElementsID = "#coercion, #coercionTab, #coercion-button";
	
	$('#myModal').on('shown.bs.modal', function () {
		  $('#myInput').focus()
	})
	
	$(stringifyElements(modalElements)).click(function(){setModalDiagram(this);});
	
	$(stringifyElements(introductionElements)).click(function(){setIntroductionView();});
	
	$(stringifyElements(overloadingElements)).click(function(){setOverloadingView();});
	
	$(stringifyElements(overridingElements)).click(function(){setOverridingView();});
	
	$(stringifyElements(coercionElements)).click(function(){setCoercionView();});
});

function initialize(){
	initMaps();
	initModals();
	initIntroductionElements();
	initOverloadingElements();
	initOverridingElements();
	initCoercionElements();
	
	modalElements = [introductionModal, overloadingModal, overridingModal, coercionModal];
	introductionElements = [introduction, introductionTab, introductionButton];
	overloadingElements = [overloading, overloadingTab, overloadingButton];
	overridingElements = [overriding, overridingTab, overridingButton];
	coercionElements = [coercion, coercionTab, coercionButton];
}

function initMaps(){
	map = getAccordionMap();
	diagramMap = getDiagramMap();
	diagramFormat = getDiagramFormatMap();
	iconMap = getIconMap();
}

function initModals(){
	introductionModal = "#" + "introductionModal";
	overloadingModal = "#" + "overloadingModal";
	overridingModal = "#" + "overridingModal";
	coercionModal = "#" + "coercionModal";
}

function initIntroductionElements(){
	introduction = "#" + "introduction";
	introductionTab = "#" + "introductionTab";
	introductionButton = "#" + "introduction-button";
}

function initOverloadingElements(){
	overloading = "#" + "overloading";
	overloadingTab = "#" + "overloadingTab";
	overloadingButton = "#" + "overloading-button";
}

function initOverridingElements(){
	overriding = "#" + "overriding";
	overridingTab = "#" + "overridingTab";
	overridingButton = "#" + "overriding-button";
}

function initCoercionElements(){
	coercion = "#" + "coercion";
	coercionTab = "#" + "coercionTab";
	coercionButton = "#" + "coercion-button";
}

function stringifyElements(elements){
	return elements.toString();
}




