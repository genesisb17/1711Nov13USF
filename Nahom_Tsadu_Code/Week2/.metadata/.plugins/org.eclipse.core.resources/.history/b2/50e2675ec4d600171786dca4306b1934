var map;
var diagramMap;
var diagramFormat;
var iconMap;
var modalElements;
	
$(document).ready(function(){
	
	map = getAccordionMap();
	diagramMap = getDiagramMap();
	diagramFormat = getDiagramFormatMap();
	iconMap = getIconMap();
	
	let introductionModal = "#" + "introductionModal";
	let overloadingModal = "#" + "overloadingModal";
	let overridingModal = "#" + "overridingModal";
	let coercionModal = "#" + "coercionModal";
	
	let modalElements = [introductionModal, overloadingModal, overridingModal, coercionModal];
	stringifyElements(modalElements);
	
	let modalElements = "#introductionModal, #overloadingModal, #overridingModal, #coercionModal";
	let introductionElements = "#introduction, #introductionTab, #introduction-button";
	let overloadingElements = "#overloading, #overloadingTab, #overloading-button";
	let overridingElements = "#overriding, #overridingTab, #overriding-button";
	let coercionElements = "#coercion, #coercionTab, #coercion-button";
	
	$('#myModal').on('shown.bs.modal', function () {
		  $('#myInput').focus()
	})
	
	$(modalElements).click(function(){setModalDiagram(this);});
	
	$(introductionElements).click(function(){setIntroductionView();});
	
	$(overloadingElements).click(function(){setOverloadingView();});
	
	$(overridingElements).click(function(){setOverridingView();});
	
	$(coercionElements).click(function(){setCoercionView();});
});

function stringifyElements(elements){
	let elementString = "";
	console.log(elements.toString());
	for(i = 0; i < elements.length; i++) elementString += (elements[i] = " ").toString();
	console.log(elementString);
	return elementString;
}


