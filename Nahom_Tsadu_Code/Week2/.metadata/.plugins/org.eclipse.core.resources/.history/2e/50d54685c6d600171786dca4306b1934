/**
 * 
 */

var map;
var diagramMap;
var diagramFormat;
var iconMap;

var modalElements;

let introductionModal;
let overloadingModal;
let overridingModal;
let coercionModal;
	
let introduction;
let introductionTab;
let introductionButton;

let overloading;
let overloadingTab;
let overloadingButton;

let overriding;
let overridingTab;
let overridingButton;

let coercion;
let coercionTab;
let coercionButton;

$(document).ready(function(){
	

	initMaps();
	initModals();
	
	let modalElements = [introductionModal, overloadingModal, overridingModal, coercionModal];
	stringifyElements(modalElements);
	
	let introductionElementsID = "#introduction, #introductionTab, #introduction-button";
	let overloadingElementsID = "#overloading, #overloadingTab, #overloading-button";
	let overridingElementsID = "#overriding, #overridingTab, #overriding-button";
	let coercionElementsID = "#coercion, #coercionTab, #coercion-button";
	
	$('#myModal').on('shown.bs.modal', function () {
		  $('#myInput').focus()
	})
	
	$(stringifyElements(modalElements)).click(function(){setModalDiagram(this);});
	
	$(introductionElementsID).click(function(){setIntroductionView();});
	
	$(overloadingElementsID).click(function(){setOverloadingView();});
	
	$(overridingElementsID).click(function(){setOverridingView();});
	
	$(coercionElementsID).click(function(){setCoercionView();});
});

function initMaps(){
	map = getAccordionMap();
	diagramMap = getDiagramMap();
	diagramFormat = getDiagramFormatMap();
	iconMap = getIconMap();
}

function initModals(){
	introductionModal = "#" + "introductionModal";
	overloadingModal = "#" + "overloadingModal";
	overridingModal = "#" + "overridingModal";
	coercionModal = "#" + "coercionModal";
}

function initIntroductionElements(){
	introduction = "#" + "introduction";
	introductionTab = "#" + "introductionTab";
	introductionButton = "#" + "introductionButton";
}


function stringifyElements(elements){
	return elements.toString();
}




