package com.rev.service;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import com.rev.dao.DAO;
import com.rev.dao.FileDAO;
import com.rev.pojos.User;

public class Service {
	static FileDAO dao = new FileDAO();
	
	public User addUser(User u){
		//Validate that username does not exist
		//assuming that it DNE:
		ArrayList<User> userList = dao.getAllUsers();
//		System.out.println(userList.toString());
		
		if(userList.isEmpty() || userList == null){
			u.setId(100);
//			System.out.println("Printing User Object:");
//			System.out.println(u.toString());
		}else{
			userList.stream().forEach(usr -> System.out.println(usr.toString()));
			System.out.println("Printing User Object:");
			System.out.println(u.toString());
		}
		
		
		return dao.addUser(u);
	}
}
