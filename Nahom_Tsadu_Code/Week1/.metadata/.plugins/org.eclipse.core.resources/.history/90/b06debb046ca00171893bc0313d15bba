package com.revature.io;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class SerializeEx {
	/*
	 * To serialize and object means to convert its state 
	 * to a byte stream so that the byte stream can be reverted
	 * back into a copy of the object. A Java object is
	 * serializable if its class or any of its super-classes
	 * implements either Serializable or it's sub-interface Externalizable
	 */
	
	static String filename = "src/logs/bytestream.txt";
	
	void writeStream(Object o){
		try(ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(filename))){
			oos.writeObject(o);
		}catch(FileNotFoundException e){
			e.printStackTrace();
		}catch(IOException e){
			e.printStackTrace();
		}
	}
}
