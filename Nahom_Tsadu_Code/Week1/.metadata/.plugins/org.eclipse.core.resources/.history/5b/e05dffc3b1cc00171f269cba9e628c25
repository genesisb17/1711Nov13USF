package com.rev.service;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

import com.rev.dao.DAO;
import com.rev.dao.FileDAO;
import com.rev.pojos.User;

public class Service {
	static FileDAO dao = new FileDAO();
	
	public User addUser(User u){
		//Validate that username does not exist
		//assuming that it DNE:
		try(BufferedWriter bw = new BufferedWriter(new FileWriter(dao.filename, true))){
			//usernames should be unique
			//add logic to validate inside of the service/business layer
			bw.write(u.toFile());
			return u;
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		return dao.addUser(u);
	}
}
