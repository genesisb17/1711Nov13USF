public class BankOps implements BankOperations, Runnable{

	private Scanner scan;
	private static BankOps bankOpsObject = null;
	private BankOpsValidator validator = BankOpsValidator.getInstance();
	private HashMap<Integer, Supplier<User>> userOps = new HashMap<Integer, Supplier<User>>();
	private HashMap<Integer, Supplier<User>> bankOps = new HashMap<Integer, Supplier<User>>();
	
	private BankOps(Scanner s){
		this.scan = s;
		this.initializeUserOps();
		this.initializeBankOps();
	}
	
	public static BankOps getInstance(Scanner s){
		if(bankOpsObject == null){
			bankOpsObject = new BankOps(s);
			return bankOpsObject;
		}else{
			return bankOpsObject;
		}
	}
	
	public void initializeUserOps(){
		userOps.put(1, () -> this.login());
		userOps.put(2, () -> this.createAccount());
	}
	
	public void initializeBankOps(){
		
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		System.out.println("Welcome to the Bank App!");
		System.out.println("Please select one option (Enter choice number): ");
		System.out.println("1. Login");
		System.out.println("2. Create Account");
		
		int op = scan.nextInt();
		scan.nextLine();
		
		//switch statement here
		//default: run();
		switch(op){
			case 2: System.out.println("You've chosen to create a new account!"); 
					userOps.get(op).get();
					break;
			
			default: run();
					 break;
		}
	}
	
