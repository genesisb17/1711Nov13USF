<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
    monitoring="autodetect" dynamicConfig="true">
    <!-- ehcahce stored data into mrmort bwut when it stars overflowing it starts writign data into the file ststem we use this propery to defien where ehcache will write into the overdlown data  -->
    <diskStore path="java.io.tmpdir/ehcache"/>
    
    <!-- mandatory configuration it is used  when an objects needs ot be cached and there are no caching regions defined for it  -->
    <defaultCache maxEntriesLocalHeap="10000" eternal="false"
        timeToIdleSeconds="120" timeToLiveSeconds="120" diskSpoolBufferSizeMB="30"
        maxEntriesLocalDisk="10000000" diskExpiryThreadIntervalSeconds="120"
        memoryStoreEvictionPolicy="LRU" >
        <persistence strategy="localTempSwap" />
    </defaultCache>
    <cache name="student" timeToIdleSeconds="10" eternal="false"
    timeToLiveSeconds="120">
    	<persistence strategy="localTempSwap" />
    </cache>
</ehcache>