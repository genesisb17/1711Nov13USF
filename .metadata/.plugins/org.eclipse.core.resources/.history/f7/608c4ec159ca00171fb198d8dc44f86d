package com.revature.io;
import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;

import org.w3c.dom.Attr;
import org.w3c.dom.Document;

import java.io.File;
import java.util.*;
//import com.sun.java.util.jar.pack.Attribute.Layout.Element;

public class WriteXML 
{
	static String filename = "src/logs/samplexml.xml";
	public static void main(String[] args) 
	{
	
		try
		{
			DocumentBuilderFactory dbFactory;
			
			DocumentBuilder dBuilder = dbFactory.newDocumentBuilder();
			Document doc = dBuilder.newDocument();
			//add element
			
			//root
			Element root = doc.createElement("cars");
			doc.appendChild(root);
			//other
			Element lux = doc.createElement();
			root.appendChild(lux);
		
			Attr attr = doc.createAttribute("company");
			attr.setValue("Ferrari");
			lux.setAttributeNode(attr);
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}
}
