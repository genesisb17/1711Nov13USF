package com.rev.dao;

import java.util.ArrayList;
import java.util.HashMap;

import com.rev.pojo.Account;
import com.rev.pojo.newUser;


public interface DAO {
	
	public HashMap<Integer, String> getEmails();
	public newUser getUserById(int id);
	public int addUser(String fn, String ln, String email, String pass);
	public Account createAccount(newUser u, int typeId);
	public ArrayList<Account> getAccountsByUser(newUser u);
	public double getBalance(int id);
	public void updateBalance(int id, double amt);
	public newUser getUser(String username);
}