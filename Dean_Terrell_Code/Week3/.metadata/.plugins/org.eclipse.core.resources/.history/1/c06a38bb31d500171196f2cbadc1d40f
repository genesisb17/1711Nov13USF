			placeholder="new item..." /> <br>
		<button id="add"class"btnbtn-primary">Add Item</button>
		<div class="row">
			<div id="bought" class="col">
				<br> <h2>To Buy</h2>
				<ul id="toBuy">
					<li id="one">brisket</li>
					<li id="two">fruits</li>
					<li id="three">wine</li>
				</ul>
			</div>
			<div id="purchase" class="col">
				<br>
				<ul id="Purchased"></ul>
			</div>
		</div>
	</div>

	<script>
		$('li').on('click', function() {
			$('#Purchased').append($(this));
		});
		
		$('#add').on('click', function() {
			var temp = document.createElement('li');
			temp.innerHTML = $('#newItem').val();
			$('#toBuy').append(temp);
			$('#newItem').val('');
			
			$('li').on('click', function() {
			$('#Purchased').append($(this));
			});
		});
		
	</script>
